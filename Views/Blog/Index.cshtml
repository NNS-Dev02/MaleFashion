@using MaleFashion.Models;
@model PagedList.IPagedList<MaleFashion.Models.BaiViet>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-blog set-bg" data-setbg="../../Images/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Tin tức của chúng tôi</h2>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Blog Section Begin -->
<section class="blog spad">
    <div class="container">
        <div class="row">
            @{
                foreach (var k in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6">
                        <div class="blog__item">
                            <div class="blog__item__pic set-bg" data-setbg="@k.hinhDD"></div>
                            <div class="blog__item__text">
                                <span><img src="~/Images/icon/calendar.png" alt=""> @k.ngayDang</span>
                                <h5>@k.tenBV</h5>
                                <a href="@Url.Action("Index", "BlogDetails", new { maBV = k.maBV })">Đọc thêm</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <!-- Phân Vùng Trang -->
        <div class="row">
            <div class="col-lg-12">
                <div class="product__pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index",
                        new { page }))
                </div>
                <div style="float:right;">
                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                </div>
            </div>
        </div>

    </div>
</section>
<!-- Blog Section End -->