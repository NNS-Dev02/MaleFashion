@using MaleFashion.Models;

@{
    ViewBag.Title = "Index";
}

@{
    if (Session["Session_Group"] != null)
    {
        List<String> DacQuyen = (List<string>)Session["Session_Group"];
        if (DacQuyen[0].CompareTo("ADMIN") == 0)
        {
            <!-- page Admin -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>Đơn hàng <i class="fas fa-arrow-right"></i> <small>Đơn hàng đang xử lý</small> </h3>
                        </div>

                        <div class="title_right">
                            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search for...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-secondary" type="button">Go!</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div class="row">
                        <div class="col-md-12 col-sm-12 ">
                            <div class="x_panel">
                                <div class="x_content">
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 ">
                                            <div class="x_panel">
                                                <div class="x_title">
                                                    <ul class="nav navbar-right panel_toolbox">
                                                        <li>
                                                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                        </li>
                                                        <li>
                                                            <a class="close-link"><i class="fa fa-close"></i></a>
                                                        </li>
                                                    </ul>
                                                    <div class="clearfix"></div>
                                                </div>
                                                <div class="x_content">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="card-box table-responsive">
                                                                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>ID Đơn hàng</th>
                                                                            <th>ID Khách hàng</th>
                                                                            <th>Ngày đặt</th>
                                                                            <th>Ngày giao</th>
                                                                            <th>Địa chỉ</th>
                                                                            <th>Ghi chú</th>
                                                                            <th>Trạng thái</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @{
                                                                            foreach (DonHang i in Common.getDonHangDaNhanGiao(999))
                                                                            {
                                                                                <tr>
                                                                                    <td>@i.soDH</td>
                                                                                    <td>@i.maKH</td>
                                                                                    <td>@string.Format("{0:dd/MM/yyyy}", i.ngayDat)</td>
                                                                                    <td>@string.Format("{0:dd/MM/yyyy}", i.ngayGH)</td>
                                                                                    <td>@i.diaChiGH</td>
                                                                                    <td>@i.ghiChu</td>
                                                                                    <td>Đang giao</td>
                                                                                </tr>
                                                                            }
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <br />
            <br />
            <!-- /page Admin -->
        }
        if (DacQuyen[0].CompareTo("USER") == 0)
        {
            <!-- page user -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>Đơn hàng <i class="fas fa-arrow-right"></i> <small>Đơn hàng đang xử lý</small> </h3>
                        </div>

                        <div class="title_right">
                            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search for...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-secondary" type="button">Go!</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div class="row">
                        <div class="col-md-12 col-sm-12 ">
                            <div class="x_panel">
                                <div class="x_content">
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 ">
                                            <div class="x_panel">
                                                <div class="x_title">
                                                    <ul class="nav navbar-right panel_toolbox">
                                                        <li>
                                                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                        </li>
                                                        <li>
                                                            <a class="close-link"><i class="fa fa-close"></i></a>
                                                        </li>
                                                    </ul>
                                                    <div class="clearfix"></div>
                                                </div>
                                                <div class="x_content">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="card-box table-responsive">
                                                                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>ID Đơn hàng</th>
                                                                            <th>ID Khách hàng</th>
                                                                            <th>Ngày đặt</th>
                                                                            <th>Ngày giao</th>
                                                                            <th>Địa chỉ</th>
                                                                            <th>Ghi chú</th>
                                                                            <th>Trạng thái</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @{
                                                                            foreach (DonHang i in Common.getDonHangDaNhanGiao(999))
                                                                            {
                                                                                <tr>
                                                                                    <td>@i.soDH</td>
                                                                                    <td>@i.maKH</td>
                                                                                    <td>@string.Format("{0:dd/MM/yyyy}", i.ngayDat)</td>
                                                                                    <td>@string.Format("{0:dd/MM/yyyy}", i.ngayGH)</td>
                                                                                    <td>@i.diaChiGH</td>
                                                                                    <td>@i.ghiChu</td>
                                                                                    <td>Đang giao</td>
                                                                                </tr>
                                                                            }
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <br />
            <br />
            <!-- /page User -->
        }
        if (DacQuyen[0].CompareTo("SHIPPER") == 0)
        {
            <!-- page Shipper -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>Đơn hàng <i class="fas fa-arrow-right"></i> <small>Đơn hàng đang xử lý</small> </h3>
                        </div>

                        <div class="title_right">
                            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search for...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-secondary" type="button">Go!</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div class="row">
                        <div class="col-md-12 col-sm-12 ">
                            <div class="x_panel">
                                <div class="x_content">
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 ">
                                            <div class="x_panel">
                                                <div class="x_title">
                                                    <ul class="nav navbar-right panel_toolbox">
