                                                    <div class="clearfix"></div>
                                                </div>
                                                <div class="x_content">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="card-box table-responsive">
                                                                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>ID Đơn hàng</th>
                                                                            <th>ID Khách hàng</th>
                                                                            <th>Ngày đặt</th>
                                                                            <th>Ngày giao</th>
                                                                            <th>Địa chỉ</th>
                                                                            <th>Ghi chú</th>
                                                                            <th>Nhóm lệnh</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @{
                                                                            foreach (DonHang i in Common.getDonHangDaNhanGiao(999))
                                                                            {
                                                                                <tr>
                                                                                    <td>@i.soDH</td>
                                                                                    <td>@i.maKH</td>
                                                                                    <td>@string.Format("{0:dd/MM/yyyy}", i.ngayDat)</td>
