                                                                                        @using (Html.BeginForm("GiaoThanhCong", "dhDangGiaoChoKhach", FormMethod.Post))
                                                                                        {
                                                                                            <input type="hidden" name="IDDonHang" value="@i.soDH" />
                                                                                            <button class="btn btn-round btn-success">Đã Giao Thành Công</button>
                                                                                        }
                                                                                        @using (Html.BeginForm("BiHuy", "dhDangGiaoChoKhach", FormMethod.Post))
                                                                                        {
                                                                                            <input type="hidden" name="IDDonHang" value="@i.soDH" />
                                                                                            <button class="btn btn-round btn-danger">Đơn Hàng Bị hủy</button>
                                                                                        }
                                                                                    </td>
                                                                                </tr>
                                                                            }
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <br />
            <br />
            <!-- /page Shipper -->
        }
    }
}