@using MaleFashion.Models;

@{
    ViewBag.Title = "Index";
    List<BaiViet> ds = (List<BaiViet>)ViewData["DanhSachBV"];
}

@*ToolTip*@
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>
<script>
    $(function () {
        $(document).tooltip();
    });
</script>

<style>
    form {
        display: block;
    }

    label {
        display: inline-block;
        width: 50em;
    }
</style>

@{
    if (Session["Session_Group"] != null)
    {
        List<String> DacQuyen = (List<string>)Session["Session_Group"];
        if (DacQuyen[0].CompareTo("ADMIN") == 0)
        {
            <!-- page Admin -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>Bài viết <i class="fas fa-arrow-right"></i> <small>Danh sách bài viết</small> </h3>
                        </div>

                        <div class="title_right">
                            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search for...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-secondary" type="button">Go!</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div class="row">
                        <div class="col-md-12 col-sm-12 ">
                            <div class="x_panel">
                                <div class="x_content">
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 ">
                                            <div class="x_panel">
                                                <div class="x_title">
                                                    <ul class="nav navbar-right panel_toolbox">
                                                        <li>
                                                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                        </li>
                                                        <li>
                                                            <a class="close-link"><i class="fa fa-close"></i></a>
                                                        </li>
                                                    </ul>
                                                    <div class="clearfix"></div>
                                                </div>
                                                <div class="x_content">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="card-box table-responsive">
                                                                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Tên bài viết</th>
                                                                            <th>Ngày đăng</th>
                                                                            <th>Tài khoản</th>
                                                                            <th>Số lần đọc</th>
                                                                            <th>Nút lệnh</th>
                                                                        </tr>
                                                                    </thead>

                                                                    <tbody>
                                                                        @{
                                                                            foreach (BaiViet i in ds)
                                                                            {
                                                                                <tr title="@Html.Raw(i.ndTomTat)">
                                                                                    <td>@i.tenBV</td>
                                                                                    <td>@string.Format("{0: hh:mm [dd/MM/yyyy]}", i.ngayDang)</td>
                                                                                    <td>@i.taiKhoan</td>
                                                                                    <td>@i.soLanDoc</td>
                                                                                    <td>
                                                                                        @using (Html.BeginForm("Active", "bvDanhSachBaiViet", FormMethod.Post))
                                                                                        {
                                                                                            <input type="hidden" name="maBaiViet" value="@i.maBV" />
                                                                                            <button class="btn btn-success" title="@ViewBag.ttCuaNut">@ViewBag.tdCuaNut</button>
                                                                                        }

                                                                                        <a href="@Url.Action("Update", "bvChinhSuaBaiViet", new {maBaiViet = i.maBV })" class="btn btn-info" title="Chỉnh sửa bài viết">Chỉnh sửa</a>

                                                                                        @using (Html.BeginForm("Delete", "bvDanhSachBaiViet", FormMethod.Post))
                                                                                        {
                                                                                            <input type="hidden" name="maBaiViet" value="@i.maBV" />
                                                                                            <button class="btn btn-danger" title="Xóa bài viết">Xóa</button>
                                                                                        }
                                                                                    </td>
                                                                                </tr>
                                                                            }
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <br />
            <br />
            <!-- /page Admin -->
        }

        if (DacQuyen[0].CompareTo("USER") == 0)
        {
            <!-- page User -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>Bài viết <i class="fas fa-arrow-right"></i> <small>Danh sách bài viết</small> </h3>
                        </div>

                        <div class="title_right">
                            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search for...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-secondary" type="button">Go!</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="clearfix"></div>

                    <div class="row">
                        <div class="col-md-12 col-sm-12 ">
                            <div class="x_panel">
                                <div class="x_content">
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 ">
                                            <div class="x_panel">
                                                <div class="x_title">
                                                    <ul class="nav navbar-right panel_toolbox">
                                                        <li>
                                                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                        </li>
                                                        <li>
                                                            <a class="close-link"><i class="fa fa-close"></i></a>
                                                        </li>
                                                    </ul>
                                                    <div class="clearfix"></div>
                                                </div>
                                                <div class="x_content">
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <div class="card-box table-responsive">
                                                                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Tên bài viết</th>
                                                                            <th>Ngày đăng</th>
                                                                            <th>Tài khoản</th>
                                                                            <th>Trạng thái</th>
                                                                            <th>Nút lệnh</th>
                                                                        </tr>
                                                                    </thead>

                                                                    <tbody>
                                                                        @{
                                                                            foreach (BaiViet i in Common.getArticlesUser(999))
                                                                            {
                                                                                <tr title="@Html.Raw(i.ndTomTat)">
                                                                                    <td>@i.tenBV</td>
                                                                                    <td>@string.Format("{0: hh:mm [dd/MM/yyyy]}", i.ngayDang)</td>
                                                                                    <td>@i.taiKhoan</td>
                                                                                    <td>@i.duyetBai</td>
                                                                                    <td>
                                                                                        <a href="@Url.Action("Update", "bvChinhSuaBaiViet", new {maBaiViet = i.maBV })" class="btn btn-info" title="Chỉnh sửa bài viết">Chỉnh sửa</a>

                                                                                        @using (Html.BeginForm("Delete", "bvDanhSachBaiViet", FormMethod.Post))
                                                                                        {
                                                                                            <input type="hidden" name="maBaiViet" value="@i.maBV" />
                                                                                            <button class="btn btn-danger" title="Xóa bài viết">Xóa</button>
                                                                                        }
                                                                                    </td>
                                                                                </tr>
                                                                            }
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <br />
            <br />
            <!-- /page User -->
        }
    }
}