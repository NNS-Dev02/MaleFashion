@model MaleFashion.Models.SanPham

@{
    ViewBag.Title = "Index";
}

<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    tinymce.init({
        selector: '#mytextarea'
    });
</script>

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Sản phẩm <i class="fas fa-arrow-right"></i> <small>Đăng sản phẩm mới</small> </h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5  form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        @using (Html.BeginForm("Index", "spDangSanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <!-- Bên trái -->
            <div class="row">
                <div class="col-md-6 ">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2><b>Thông tin chính</b></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="form-label-left input_mask">
                                <label for="fullname"><b>Tên sản phẩm :</b></label>
                                @Html.TextBoxFor(m => m.tenSP, new { @class = "form-control", placeholder = "Không quá 50 từ..." })
                                <br />
                                <label for="message"><b>Nội dung tóm tắt :</b></label>
                                @Html.TextAreaFor(m => m.ndTomTat, new { @class = "form-control", placeholder = "Không quá 200 từ...", @rows = "6" })
                                <br />
                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <label for="fullname"><b>Giá gốc :</b></label>
                                        @Html.TextBoxFor(m => m.giaGoc, new { @class = "form-control" })
                                    </div>
                                    <div class="col-md-4">
                                        <label for="fullname"><b>Giá bán ra :</b></label>
                                        @Html.TextBoxFor(m => m.giaBan, new { @class = "form-control" })
                                    </div>
                                    <div class="col-md-4">
                                        <label for="fullname"><b>Đơn vị :</b></label>
                                        @Html.TextBoxFor(m => m.dvt, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-12" style="margin-top:20px;">
                                    <div class="col-md-4">
                                        <label for="fullname"><b>Mã sản phẩm :</b></label>
                                        @Html.TextBoxFor(m => m.maSP, new { @class = "form-control", @disabled = "disabled" })
                                    </div>
                                    <div class="col-md-4">
                                        <label for="fullname"><b>Thương hiệu :</b></label>
                                        @Html.TextBoxFor(m => m.nhaSanXuat, new { @class = "form-control" })
                                    </div>
                                    <div class="col-md-4">
                                        <label for="fullname"><b>Thể loại :</b></label>
                                        @Html.DropDownListFor(m => m.maLoai,
                                        new List<SelectListItem> {
                                        new SelectListItem { Value = "1" , Text = "Áo" },
                                        new SelectListItem { Value = "2" , Text = "Mũ nón" },
                                        new SelectListItem { Value = "3" , Text = "Đồng hồ" },
                                        new SelectListItem { Value = "4" , Text = "Giày" },
                                        new SelectListItem { Value = "5" , Text = "Kính mát" },
                                        new SelectListItem { Value = "6" , Text = "Túi" },
                                        },
                                        new { @class = "form-control", @style = "font" })
                                    </div>
                                </div>
                                <div class="col-md-12" style="margin-top:20px;">
                                    <div class="col-md-4">
                                        <label for="fullname"><b>Ngày đăng :</b></label>
                                        @Html.TextBoxFor(m => m.ngayDang, new { @class = "form-control", @disabled = "disabled" })
                                    </div>
                                    <div class="col-md-4">
                                        <label for="fullname"><b>Tài khoản :</b></label>
                                        @Html.TextBoxFor(m => m.taiKhoan, new { @class = "form-control", @disabled = "disabled" })
                                    </div>
                                    <div class="col-md-4">
                                        <label for="fullname"><b>Số lần xem :</b></label>
                                        @Html.TextBoxFor(m => m.soLanXem, new { @class = "form-control", @disabled = "disabled" })
                                    </div>
                                </div>
                                <br />
                            </div>
                        </div>
                    </div>


                </div>

                <!-- Bên phải -->
                <div class="col-md-6 ">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2><b>Hình đại diện</b></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br />
                            <div class="form-horizontal form-label-left">
                                <img src="@ViewBag.DDHinh" style="width:100%;" />
                                <br />
                                <br />
                                <input type="file" data-role="magic-overlay" data-target="#pictureBtn" data-edit="insertImage" name="HinhDaiDien">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Dưới cùng -->
                <div class="col-md-12 col-sm-12 ">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2><b>Nội dung sản phẩm</b></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            @Html.TextAreaFor(m => m.NoiDung, new { @style = "height:500px;", id = "VungSoanThao" })
                            <br />
                        </div>
                        <button type="submit" class="btn btn-primary">Đăng sản phẩm</button>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<br />
<br />
<!-- /page content -->
@*Thư viện TinyMCE*@

<script src="https://cdn.tiny.cloud/1/iy3rmwsn6j9b0z21d2on41nji1fxtdixkfa7xw2r3c9iuj5l/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    tinymce.init({
        selector: 'textarea#VungSoanThao',
        plugins: 'a11ychecker advcode casechange export formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
        toolbar: 'a11ycheck addcomment showcomments casechange checklist code export formatpainter pageembed permanentpen table',
        toolbar_mode: 'floating',
        tinycomments_mode: 'embedded',
        tinycomments_author: 'Author name',
    });
</script>